@model TiendaEvertec.Models.Order

@{
    ViewBag.Title = "Iniciar Orden de compra";
}



<h2>Complete su Orden</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

       
  
<div class="form-horizontal">
    <h4>A continuacion complete su orden de compra</h4>
    <hr />

    <div style="padding-bottom: 5px;">
        @{
            Html.RenderPartial("ProductsOfOrder");
        }
    </div>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.customer_name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.customer_name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.customer_name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.customer_surname, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.customer_surname, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.customer_surname, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.customer_document, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.customer_document, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.customer_document, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.customer_documenttype, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select class="form-control" id="customer_documenttype" name="customer_documenttype">
                <option value="CC">Colombia - Cédula de ciudadanía (CC)</option>
                <option value="CE">Colombia - Cédula de extranjería (CE)</option>
                <option value="TI">Colombia - Tarjeta de identidad (TI)</option>
                <option value="NIT">Colombia - Número de Identificación Tributaria (NIT)</option>
                <option value="RUT">Colombia - Registro único tributario (RUT)</option>
                <option value="CIP">Panamá - Cédula de identidad personal (CIP)</option>
            </select>
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.customer_address, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.customer_address, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.customer_address, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.customer_company, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.customer_company, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.customer_company, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.customer_email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.customer_email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.customer_email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.customer_mobile, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.customer_mobile, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.customer_mobile, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-3 col-md-10;">


            @Html.ActionLink("Volver al menu", "Index", "Customer", null, new { @class = "btn btn-default" })
            &nbsp; &nbsp; &nbsp;
            <input type="submit" value="Iniciar Orden" class="btn btn-default" />
        </div>
    </div>
</div>
       
    

}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
