@model TiendaEvertec.Models.Order

@{
    ViewBag.Title = "Resumen de Orden";
}

<h2>Detalles de su orden de compra</h2>

<div>
    <hr />
    @{
        Html.RenderPartial("FullOrderDetail");
    }

    <div>
        @Html.ActionLink("Volver al menu", "Index", "Customer", null, new { @class = "btn btn-default" }) &nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;
        @if (Model.status == "CREATED")
        {
            @Html.ActionLink("Confirmar Compra y Pagar", "ConfirmOrder", "Customer", routeValues: new { Id = Model.Id }, htmlAttributes: new { @class = "btn btn-default" })
        }
    </div>
</div>

